{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "apps/backend": {
      "component": "backend",
      "package-name": "dealbot-backend",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node"
    },
    "apps/web": {
      "component": "web",
      "package-name": "dealbot-web",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node"
    }
  },
  "separate-pull-requests": false,
  "pull-request-title-pattern": "chore${scope}: release to production (${component} ${version})",
  "group-pull-request-title-pattern": "chore${scope}: release to production (${branch})"
}
